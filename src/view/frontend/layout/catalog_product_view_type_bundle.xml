<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.bundle.options">
            <block class="Infrangible\CatalogProductOptionComposite\Block\Catalog\Product\View\Type\Bundle\Options\Options" name="product.info.bundle.options.options" template="Infrangible_CatalogProductOptionComposite::catalog/product/view/type/bundle/options/options.phtml">
                <block class="Infrangible\CatalogProductOptionComposite\Block\Product\View\Options\Composite\Bundle" name="product.info.bundle.options.options.composite" as="product_options_composite" template="Infrangible_CatalogProductOptionComposite::product/view/options/composite/bundle.phtml"/>
                <block class="Infrangible\CatalogProductOptionWrapper\Block\Product\View\Options\Option" name="product.info.bundle.options.options.wrapper" as="product_option_wrapper" template="Infrangible_CatalogProductOptionWrapper::product/view/options/option.phtml"/>
                <block class="Magento\Catalog\Block\Product\View\Options\Type\DefaultType" name="product.info.bundle.options.options.default" as="option.default" template="Magento_Catalog::product/view/options/type/default.phtml"/>
                <block class="Magento\Catalog\Block\Product\View\Options\Type\Text" name="product.info.bundle.options.options.text" as="option.text" template="Magento_Catalog::product/view/options/type/text.phtml"/>
                <block class="Magento\Catalog\Block\Product\View\Options\Type\File" name="product.info.bundle.options.options.file" as="option.file" template="Magento_Catalog::product/view/options/type/file.phtml"/>
                <block class="Magento\Catalog\Block\Product\View\Options\Type\Select" name="product.info.bundle.options.options.select" as="option.select" template="Magento_Catalog::product/view/options/type/select.phtml"/>
                <block class="Magento\Catalog\Block\Product\View\Options\Type\Date" name="product.info.bundle.options.options.date" as="option.date" template="Magento_Catalog::product/view/options/type/date.phtml"/>
                <block class="Infrangible\CatalogProductOptionComposite\Block\Product\View\Options\Composite\Bundle" name="product.info.bundle.options.options.price" as="product_options_price" template="Infrangible_CatalogProductOptionComposite::product/view/options/composite/price.phtml"/>
            </block>
        </referenceBlock>
    </body>
</page>
